<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_event"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.event.EventActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/top_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/ferrari_secondary"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/topAppBar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/top_bar_height"
            android:background="@color/ferrari_secondary"
            app:navigationIcon="@drawable/arrow_back_ios_style">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginEnd="@dimen/medium_margin">

                <TextView
                    android:id="@+id/topAppBarTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:autoSizeMaxTextSize="25sp"
                    android:autoSizeMinTextSize="12sp"
                    android:autoSizeTextType="uniform"
                    android:fontFamily="@font/orbitron_bold"
                    android:gravity="center"
                    android:maxLines="1"
                    android:textColor="@color/black"
                    android:textSize="25sp">

                </TextView>

            </RelativeLayout>

        </com.google.android.material.appbar.MaterialToolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/event_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/screen_background_color"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/top_bar_layout">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/event_card"
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:orientation="vertical"
                    android:paddingBottom="5dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/round_number"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:layout_weight="1"
                            android:fontFamily="@font/orbitron_regular"
                            android:text="@string/not_found"
                            android:textColor="@color/white"
                            android:textSize="@dimen/body_text_size">

                        </TextView>

                        <LinearLayout
                            android:layout_width="70dp"
                            android:layout_height="50dp"
                            android:background="@drawable/curved_bottom_left">

                            <ImageView
                                android:id="@+id/country_flag"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginStart="7dp"
                                android:layout_marginTop="3dp"
                                android:layout_marginEnd="3dp"
                                android:layout_marginBottom="5dp">

                            </ImageView>

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/event_year"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/orbitron_bold"
                            android:text="@string/not_found"
                            android:textColor="@color/white"
                            android:textSize="@dimen/layout_subtitle_text_size">

                        </TextView>

                        <TextView
                            android:id="@+id/gp_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/orbitron_bold"
                            android:text="@string/not_found"
                            android:textColor="@color/white"
                            android:textSize="@dimen/layout_title_1_text_size">

                        </TextView>

                        <TextView
                            android:id="@+id/event_date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end"
                            android:layout_marginTop="15dp"
                            android:layout_marginEnd="15dp"
                            android:fontFamily="@font/orbitron_regular"
                            android:text="@string/not_found"
                            android:textColor="@color/white">

                        </TextView>

                    </LinearLayout>

                </LinearLayout>


                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="40dp"
                    android:layout_marginEnd="5dp"
                    android:clickable="true"
                    android:focusable="true"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="5dp"
                    app:strokeColor="@color/timer_gray">

                    <LinearLayout
                        android:id="@+id/countdown_and_track"
                        android:layout_width="match_parent"
                        android:layout_height="130dp"
                        android:background="@color/timer_gray"
                        android:baselineAligned="false"
                        android:orientation="horizontal">

                        <FrameLayout
                            android:id="@+id/event_card_container"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="0.35">

                            <include
                                android:id="@+id/timer_card_countdown"
                                layout="@layout/timer_layout"
                                android:visibility="visible" />

                            <include
                                android:id="@+id/timer_card_results"
                                layout="@layout/results_layout"
                                android:visibility="gone" />

                            <include
                                android:id="@+id/timer_card_pending_results"
                                layout="@layout/pending_results_layout"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:visibility="gone" />

                            <include
                                android:id="@+id/timer_card_race_cancelled"
                                layout="@layout/race_cancelled_layout"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:visibility="gone" />

                        </FrameLayout>

                        <LinearLayout
                            android:layout_width="2dp"
                            android:layout_height="match_parent"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:background="@color/screen_background_color">

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/track_outline_layout"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="0.65"
                            android:clickable="true"
                            android:focusable="true">

                            <ImageView
                                android:id="@+id/track_outline_image"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="5dp">

                            </ImageView>

                        </LinearLayout>

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <FrameLayout
                    android:id="@+id/session_status_card_container"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginStart="40dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="40dp"
                    android:layout_marginBottom="20dp">

                    <include
                        android:id="@+id/event_live_card"
                        layout="@layout/event_live_session_card"
                        android:visibility="gone" />

                    <include
                        android:id="@+id/event_not_live_card"
                        layout="@layout/event_no_live_session_card"
                        android:visibility="visible" />

                </FrameLayout>

                <include
                    android:id="@+id/event_schedule_table"
                    layout="@layout/event_schedule_table_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="5dp" />

                <Button
                    android:id="@+id/goToForecastButton"
                    style="@style/Widget.Material3.Button.ElevatedButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="50dp"
                    android:layout_marginTop="@dimen/medium_margin"
                    android:layout_marginEnd="50dp"
                    android:backgroundTint="@color/white"
                    android:fontFamily="@font/orbitron_bold"
                    android:text="@string/weather_forecast"
                    android:textColor="@color/black"
                    android:textSize="@dimen/layout_subtitle_text_size"
                    app:icon="@drawable/sun_icon"
                    app:iconGravity="textStart"
                    app:iconTint="@null" />

            </LinearLayout>

        </ScrollView>

    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

    <include
        android:id="@+id/loading_screen"
        layout="@layout/loading_screen"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>