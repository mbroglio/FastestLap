<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_constructor_bio"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/screen_background_color"
    tools:context=".ui.bio.ConstructorBioActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/top_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/topAppBar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/top_bar_height"
            app:menu="@menu/bio_menu"
            app:navigationIcon="@drawable/arrow_back_ios_style">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center">

                <TextView
                    android:id="@+id/topAppBarTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:autoSizeMaxTextSize="25sp"
                    android:autoSizeMinTextSize="@dimen/min_text_resize_1"
                    android:autoSizeTextType="uniform"
                    android:fontFamily="@font/orbitron_bold"
                    android:gravity="center"
                    android:maxLines="1"
                    android:textColor="@color/black"
                    android:textSize="25sp">

                </TextView>

            </RelativeLayout>

        </com.google.android.material.appbar.MaterialToolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/constructor_bio_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/screen_background_color"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/top_bar_layout">

        <ScrollView
            android:id="@+id/constructor_bio_scroll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/screen_background_color"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/team_logo_and_flag"
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="10dp"
                    android:baselineAligned="false"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.65">

                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/team_logo_card"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentBottom="true"
                            android:layout_margin="5dp"
                            app:cardBackgroundColor="@color/timer_gray"
                            app:strokeWidth="3dp">

                            <ImageView
                                android:id="@+id/team_logo_image"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_margin="5dp"
                                android:importantForAccessibility="no">

                            </ImageView>

                        </com.google.android.material.card.MaterialCardView>

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.35">

                        <ImageView
                            android:id="@+id/team_flag"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentBottom="true"
                            android:layout_margin="16dp"
                            android:importantForAccessibility="no">

                        </ImageView>

                    </RelativeLayout>

                </LinearLayout>

                <ImageView
                    android:id="@+id/team_car_image"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:importantForAccessibility="no">

                </ImageView>

                <LinearLayout
                    android:id="@+id/team_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="5dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/orbitron_bold"
                        android:text="@string/drivers_upper_case"
                        android:textColor="@color/white"
                        android:textSize="@dimen/layout_title_1_text_size">

                    </TextView>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="5dp">

                        <LinearLayout
                            android:id="@+id/driver_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:orientation="vertical">

                            <com.google.android.material.card.MaterialCardView
                                android:id="@+id/driver_1_card"
                                android:layout_width="@dimen/driver_photo_in_card"
                                android:layout_height="@dimen/driver_photo_in_card"
                                android:layout_gravity="center"
                                android:clickable="true"
                                android:focusable="true"
                                app:strokeColor="@color/black"
                                app:strokeWidth="3dp">

                                <ImageView
                                    android:id="@+id/driver_1_image"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_margin="5dp"
                                    android:importantForAccessibility="no">

                                </ImageView>

                            </com.google.android.material.card.MaterialCardView>

                            <TextView
                                android:id="@+id/driver_1_name"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:autoSizeMaxTextSize="@dimen/body_text_size"
                                android:autoSizeMinTextSize="@dimen/min_text_resize_1"
                                android:autoSizeTextType="uniform"
                                android:fontFamily="@font/orbitron_regular"
                                android:gravity="center"
                                android:maxLines="1"
                                android:text="@string/not_found"
                                android:textColor="@color/white"
                                android:textSize="@dimen/body_text_size">

                            </TextView>

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/driver_2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="70dp"
                            android:layout_toEndOf="@id/driver_1"
                            android:orientation="vertical">

                            <com.google.android.material.card.MaterialCardView
                                android:id="@+id/driver_2_card"
                                android:layout_width="@dimen/driver_photo_in_card"
                                android:layout_height="@dimen/driver_photo_in_card"
                                android:layout_gravity="center"
                                android:clickable="true"
                                android:focusable="true"
                                app:strokeColor="@color/black"
                                app:strokeWidth="3dp">

                                <ImageView
                                    android:id="@+id/driver_2_image"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_margin="5dp"
                                    android:importantForAccessibility="no">

                                </ImageView>

                            </com.google.android.material.card.MaterialCardView>

                            <TextView
                                android:id="@+id/driver_2_name"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:autoSizeMaxTextSize="@dimen/body_text_size"
                                android:autoSizeMinTextSize="@dimen/min_text_resize_1"
                                android:autoSizeTextType="uniform"
                                android:fontFamily="@font/orbitron_regular"
                                android:gravity="center"
                                android:maxLines="1"
                                android:text="@string/not_found"
                                android:textColor="@color/white"
                                android:textSize="@dimen/body_text_size">

                            </TextView>

                        </LinearLayout>

                    </RelativeLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:fontFamily="@font/orbitron_bold"
                        android:text="@string/team_info_upper_case"
                        android:textColor="@color/white"
                        android:textSize="@dimen/layout_title_1_text_size">

                    </TextView>

                    <LinearLayout
                        android:id="@+id/team_stats"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="5dp"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/team_full_name_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                android:fontFamily="@font/orbitron_bold"
                                android:text="@string/full_name"
                                android:textColor="@color/white"
                                android:textSize="@dimen/layout_subtitle_text_size">

                            </TextView>

                            <TextView
                                android:id="@+id/team_full_name_value"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:layout_marginStart="20dp"
                                android:layout_marginEnd="2dp"
                                android:layout_toEndOf="@id/team_full_name_text"
                                android:autoSizeMaxTextSize="@dimen/body_text_size"
                                android:autoSizeMinTextSize="@dimen/min_text_resize_1"
                                android:autoSizeTextType="uniform"
                                android:fontFamily="@font/orbitron_regular"
                                android:gravity="start"
                                android:maxLines="1"
                                android:text="@string/not_found"
                                android:textColor="@color/white"
                                android:textSize="@dimen/body_text_size">

                            </TextView>

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/team_base_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                android:fontFamily="@font/orbitron_bold"
                                android:text="@string/base"
                                android:textColor="@color/white"
                                android:textSize="@dimen/layout_subtitle_text_size">

                            </TextView>

                            <TextView
                                android:id="@+id/team_base_value"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:layout_marginStart="20dp"
                                android:layout_marginEnd="2dp"
                                android:layout_toEndOf="@id/team_base_text"
                                android:autoSizeMaxTextSize="@dimen/body_text_size"
                                android:autoSizeMinTextSize="@dimen/min_text_resize_1"
                                android:autoSizeTextType="uniform"
                                android:fontFamily="@font/orbitron_regular"
                                android:gravity="start"
                                android:maxLines="1"
                                android:text="@string/not_found"
                                android:textColor="@color/white"
                                android:textSize="@dimen/body_text_size">

                            </TextView>

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/team_principal_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                android:fontFamily="@font/orbitron_bold"
                                android:text="@string/team_principal"
                                android:textColor="@color/white"
                                android:textSize="@dimen/layout_subtitle_text_size">

                            </TextView>

                            <TextView
                                android:id="@+id/team_principal_value"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:layout_marginStart="20dp"
                                android:layout_toEndOf="@id/team_principal_text"
                                android:autoSizeMaxTextSize="@dimen/body_text_size"
                                android:autoSizeMinTextSize="@dimen/min_text_resize_1"
                                android:autoSizeTextType="uniform"
                                android:fontFamily="@font/orbitron_regular"
                                android:gravity="start"
                                android:maxLines="1"
                                android:text="@string/not_found"
                                android:textColor="@color/white"
                                android:textSize="@dimen/body_text_size">

                            </TextView>

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/team_chassis_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                android:fontFamily="@font/orbitron_bold"
                                android:text="@string/chassis"
                                android:textColor="@color/white"
                                android:textSize="@dimen/layout_subtitle_text_size">

                            </TextView>

                            <TextView
                                android:id="@+id/team_chassis_value"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:layout_marginStart="20dp"
                                android:layout_toEndOf="@id/team_chassis_text"
                                android:autoSizeMaxTextSize="@dimen/body_text_size"
                                android:autoSizeMinTextSize="@dimen/min_text_resize_1"
                                android:autoSizeTextType="uniform"
                                android:fontFamily="@font/orbitron_regular"
                                android:gravity="start"
                                android:maxLines="1"
                                android:text="@string/not_found"
                                android:textColor="@color/white"
                                android:textSize="@dimen/body_text_size">

                            </TextView>

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/team_power_unit_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                android:fontFamily="@font/orbitron_bold"
                                android:text="@string/power_unit"
                                android:textColor="@color/white"
                                android:textSize="@dimen/layout_subtitle_text_size">

                            </TextView>

                            <TextView
                                android:id="@+id/team_power_unit_value"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:layout_marginStart="20dp"
                                android:layout_toEndOf="@id/team_power_unit_text"
                                android:autoSizeMaxTextSize="@dimen/body_text_size"
                                android:autoSizeMinTextSize="@dimen/min_text_resize_1"
                                android:autoSizeTextType="uniform"
                                android:fontFamily="@font/orbitron_regular"
                                android:gravity="start"
                                android:maxLines="1"
                                android:text="@string/not_found"
                                android:textColor="@color/white"
                                android:textSize="@dimen/body_text_size">

                            </TextView>

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/team_first_entry_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                android:fontFamily="@font/orbitron_bold"
                                android:text="@string/first_entry"
                                android:textColor="@color/white"
                                android:textSize="@dimen/layout_subtitle_text_size">

                            </TextView>

                            <TextView
                                android:id="@+id/team_first_entry_value"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:layout_marginStart="20dp"
                                android:layout_toEndOf="@id/team_first_entry_text"
                                android:autoSizeMaxTextSize="@dimen/body_text_size"
                                android:autoSizeMinTextSize="@dimen/min_text_resize_1"
                                android:autoSizeTextType="uniform"
                                android:fontFamily="@font/orbitron_regular"
                                android:gravity="start"
                                android:maxLines="1"
                                android:text="@string/not_found"
                                android:textColor="@color/white"
                                android:textSize="@dimen/body_text_size">

                            </TextView>

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/team_championships_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                android:fontFamily="@font/orbitron_bold"
                                android:text="@string/world_championships"
                                android:textColor="@color/white"
                                android:textSize="@dimen/layout_subtitle_text_size">

                            </TextView>

                            <TextView
                                android:id="@+id/team_championships_value"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:layout_marginStart="20dp"
                                android:layout_toEndOf="@id/team_championships_text"
                                android:autoSizeMaxTextSize="@dimen/body_text_size"
                                android:autoSizeMinTextSize="@dimen/min_text_resize_1"
                                android:autoSizeTextType="uniform"
                                android:fontFamily="@font/orbitron_regular"
                                android:gravity="start"
                                android:maxLines="1"
                                android:text="@string/not_found"
                                android:textColor="@color/white"
                                android:textSize="@dimen/body_text_size">

                            </TextView>

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/team_wins_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                android:fontFamily="@font/orbitron_bold"
                                android:text="@string/wins"
                                android:textColor="@color/white"
                                android:textSize="@dimen/layout_subtitle_text_size">

                            </TextView>

                            <TextView
                                android:id="@+id/team_wins_value"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:layout_marginStart="20dp"
                                android:layout_toEndOf="@id/team_wins_text"
                                android:autoSizeMaxTextSize="@dimen/body_text_size"
                                android:autoSizeMinTextSize="@dimen/min_text_resize_1"
                                android:autoSizeTextType="uniform"
                                android:fontFamily="@font/orbitron_regular"
                                android:gravity="start"
                                android:maxLines="1"
                                android:text="@string/not_found"
                                android:textColor="@color/white"
                                android:textSize="@dimen/body_text_size">

                            </TextView>

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/team_podiums_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                android:fontFamily="@font/orbitron_bold"
                                android:text="@string/podiums"
                                android:textColor="@color/white"
                                android:textSize="@dimen/layout_subtitle_text_size">

                            </TextView>

                            <TextView
                                android:id="@+id/team_podiums_value"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:layout_marginStart="20dp"
                                android:layout_toEndOf="@id/team_podiums_text"
                                android:autoSizeMaxTextSize="@dimen/body_text_size"
                                android:autoSizeMinTextSize="@dimen/min_text_resize_1"
                                android:autoSizeTextType="uniform"
                                android:fontFamily="@font/orbitron_regular"
                                android:gravity="start"
                                android:maxLines="1"
                                android:text="@string/not_found"
                                android:textColor="@color/white"
                                android:textSize="@dimen/body_text_size">

                            </TextView>

                        </RelativeLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/team_history"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="5dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/orbitron_bold"
                            android:text="@string/team_history_upper_case"
                            android:textColor="@color/white"
                            android:textSize="@dimen/layout_title_1_text_size" />


                        <TableLayout
                            android:id="@+id/history_table"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="3dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginEnd="3dp">

                        </TableLayout>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </ScrollView>

    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

    <include
        android:id="@+id/loading_screen"
        layout="@layout/loading_screen"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
