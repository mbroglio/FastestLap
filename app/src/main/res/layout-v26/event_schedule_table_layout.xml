        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="5dp"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/session_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/bottom_right_stroke"
            android:clickable="false"
            android:focusable="false"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/session_1_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"
                android:autoSizeMaxTextSize="@dimen/layout_subtitle_text_size"
                android:autoSizeMinTextSize="@dimen/text_minor_importance_size"
                android:autoSizeTextType="uniform"
                android:fontFamily="@font/orbitron_bold"
                android:maxLines="1"
                android:paddingEnd="5dp"
                android:text="@string/not_found"
                android:textColor="@color/white"
                android:textSize="@dimen/layout_subtitle_text_size"
                tools:ignore="RtlSymmetry" />

            <TextView
                android:id="@+id/session_1_day"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.23"
                android:autoSizeMaxTextSize="@dimen/body_text_size"
                android:autoSizeMinTextSize="8sp"
                android:autoSizeTextType="uniform"
                android:fontFamily="@font/orbitron_regular"
                android:maxLines="1"
                android:paddingEnd="5dp"
                android:text="@string/not_found"
                android:textColor="@color/white"
                android:textSize="@dimen/body_text_size"
                tools:ignore="RtlSymmetry" />

            <TextView
                android:id="@+id/session_1_time"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.27"
                android:autoSizeMaxTextSize="@dimen/body_text_size"
                android:autoSizeMinTextSize="8sp"
                android:autoSizeTextType="uniform"
                android:fontFamily="@font/orbitron_regular"
                android:gravity="center"
                android:maxLines="1"
                android:paddingEnd="5dp"
                android:text="@string/not_found"
                android:textColor="@color/white"
                android:textSize="@dimen/body_text_size"
                tools:ignore="RtlSymmetry" />

            <LinearLayout
                android:id="@+id/session_1_flag_container"
                android:layout_width="0dp"
                android:layout_height="28dp"
                android:layout_weight="0.1"
                android:background="@drawable/background_right_rounded"
                android:clickable="false"
                android:focusable="false">

                <ImageView
                    android:id="@+id/session_1_flag"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="3dp"
                    android:importantForAccessibility="no"
                    android:visibility="invisible"
                    app:srcCompat="@drawable/checkered_flag" />

            </LinearLayout>

        </LinearLayout>

