<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="?materialCardViewElevatedStyle"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    tools:context=".ui.bio.DriverBioActivity">

    <LinearLayout
        android:id="@+id/driver_history_row"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/season_year"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_weight="1"
            android:autoSizeMaxTextSize="@dimen/layout_subtitle_text_size"
            android:autoSizeMinTextSize="@dimen/text_minor_importance_size"
            android:autoSizeTextType="uniform"
            android:fontFamily="@font/orbitron_bold"
            android:gravity="center"
            android:maxLines="1"
            android:text="@string/year_upper_case"
            android:textColor="@color/black"
            android:textSize="@dimen/layout_subtitle_text_size" />

        <TextView
            android:id="@+id/driver_position"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_weight="1"
            android:autoSizeMaxTextSize="@dimen/layout_subtitle_text_size"
            android:autoSizeMinTextSize="@dimen/text_minor_importance_size"
            android:autoSizeTextType="uniform"
            android:fontFamily="@font/orbitron_bold"
            android:gravity="center"
            android:maxLines="1"
            android:text="@string/pos_upper_case"
            android:textColor="@color/black"
            android:textSize="@dimen/layout_subtitle_text_size">

        </TextView>

        <TextView
            android:id="@+id/team_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_weight="0.8"
            android:autoSizeMaxTextSize="@dimen/layout_subtitle_text_size"
            android:autoSizeMinTextSize="@dimen/text_minor_importance_size"
            android:autoSizeTextType="uniform"
            android:fontFamily="@font/orbitron_bold"
            android:gravity="center"
            android:maxLines="1"
            android:text="@string/team_upper_case"
            android:textColor="@color/black"
            android:textSize="@dimen/layout_subtitle_text_size">

        </TextView>

        <TextView
            android:id="@+id/driver_points"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_weight="1"
            android:autoSizeMaxTextSize="@dimen/layout_subtitle_text_size"
            android:autoSizeMinTextSize="@dimen/text_minor_importance_size"
            android:autoSizeTextType="uniform"
            android:fontFamily="@font/orbitron_bold"
            android:gravity="center"
            android:maxLines="1"
            android:text="@string/pts_upper_case"
            android:textColor="@color/black"
            android:textSize="@dimen/layout_subtitle_text_size">

        </TextView>

        <TextView
            android:id="@+id/driver_wins"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_weight="1.05"
            android:autoSizeMaxTextSize="@dimen/layout_subtitle_text_size"
            android:autoSizeMinTextSize="@dimen/text_minor_importance_size"
            android:autoSizeTextType="uniform"
            android:fontFamily="@font/orbitron_bold"
            android:gravity="center"
            android:maxLines="1"
            android:text="@string/w_upper_case"
            android:textColor="@color/black"
            android:textSize="@dimen/layout_subtitle_text_size">

        </TextView>

        <TextView
            android:id="@+id/driver_podiums"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:layout_weight="1"
            android:autoSizeMaxTextSize="@dimen/layout_subtitle_text_size"
            android:autoSizeMinTextSize="@dimen/text_minor_importance_size"
            android:autoSizeTextType="uniform"
            android:fontFamily="@font/orbitron_bold"
            android:gravity="center"
            android:maxLines="1"
            android:text="@string/pod_upper_case"
            android:textColor="@color/black"
            android:textSize="@dimen/layout_subtitle_text_size">

        </TextView>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>