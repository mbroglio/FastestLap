<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp">

    <TextView
        android:id="@+id/position_text"
        android:layout_width="32dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:fontFamily="@font/orbitron_regular"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="14sp" />

    <View
        android:id="@+id/team_color_indicator"
        android:layout_width="4dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginStart="4dp" />

    <TextView
        android:id="@+id/driver_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:layout_weight="1"
        android:autoSizeMaxTextSize="@dimen/layout_subtitle_text_size"
        android:autoSizeMinTextSize="@dimen/min_text_resize_1"
        android:autoSizeTextType="uniform"
        android:fontFamily="@font/orbitron_bold"
        android:gravity="start|center"
        android:maxLines="1"
        android:textColor="@color/white"
        android:textSize="@dimen/layout_subtitle_text_size" />

    <TextView
        android:id="@+id/q1_time"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginEnd="5dp"
        android:layout_weight="0.8"
        android:autoSizeMaxTextSize="@dimen/body_text_size"
        android:autoSizeMinTextSize="@dimen/min_text_resize_1"
        android:autoSizeTextType="uniform"
        android:fontFamily="@font/orbitron_regular"
        android:gravity="center"
        android:maxLines="1"
        android:textColor="@color/white"
        android:textSize="@dimen/body_text_size" />

    <TextView
        android:id="@+id/q2_time"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginEnd="5dp"
        android:layout_weight="0.8"
        android:autoSizeMaxTextSize="@dimen/body_text_size"
        android:autoSizeMinTextSize="@dimen/min_text_resize_2"
        android:autoSizeTextType="uniform"
        android:fontFamily="@font/orbitron_regular"
        android:gravity="center"
        android:maxLines="1"
        android:textColor="@color/white"
        android:textSize="@dimen/body_text_size" />

    <TextView
        android:id="@+id/q3_time"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="0.8"
        android:autoSizeMaxTextSize="@dimen/body_text_size"
        android:autoSizeMinTextSize="@dimen/min_text_resize_2"
        android:autoSizeTextType="uniform"
        android:fontFamily="@font/orbitron_regular"
        android:gravity="center"
        android:maxLines="1"
        android:textColor="@color/white"
        android:textSize="@dimen/body_text_size" />

</LinearLayout>