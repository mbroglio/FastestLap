<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/last_race_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/screen_background_color"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/title_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/last_race_name_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_weight="0.2"
            android:background="@drawable/bottom_right_stroke">

            <TextView
                android:id="@+id/last_race_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="5dp"
                android:autoSizeMaxTextSize="@dimen/page_title_text_size"
                android:autoSizeMinTextSize="9sp"
                android:autoSizeTextType="uniform"
                android:fontFamily="@font/orbitron_bold"
                android:maxLines="1"
                android:text="@string/not_found"
                android:textColor="@color/white"
                android:textSize="20sp">

            </TextView>

        </LinearLayout>

        <TextView
            android:id="@+id/last_race"
            android:layout_weight="0.8"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="5dp"
            android:autoSizeMaxTextSize="@dimen/body_text_size"
            android:autoSizeMinTextSize="9sp"
            android:autoSizeTextType="uniform"
            android:fontFamily="@font/orbitron_bold"
            android:gravity="center"
            android:maxLines="2"
            android:text="@string/last_race_upper_case"
            android:textColor="@color/white"
            android:textSize="@dimen/body_text_size" />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/track_info"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/title_layout"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/last_race_track_outline"
            android:layout_width="120dp"
            android:layout_height="100dp"
            android:importantForAccessibility="no"
            android:layout_centerHorizontal="true">

        </ImageView>

        <TextView
            android:id="@+id/last_race_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/last_race_track_outline"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/orbitron_regular"
            android:text="@string/not_found"
            android:textColor="@color/white"
            android:textSize="@dimen/body_text_size">

        </TextView>

        <TextView
            android:id="@+id/last_race_month"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/last_race_date"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/orbitron_bold"
            android:text="@string/not_found"
            android:textColor="@color/white"
            android:textSize="@dimen/layout_subtitle_text_size">

        </TextView>

        <LinearLayout
            android:id="@+id/track_separator"
            android:layout_width="3dp"
            android:layout_height="match_parent"
            android:layout_alignTop="@id/last_race_track_outline"
            android:layout_alignBottom="@id/last_race_month"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_toEndOf="@id/last_race_track_outline"
            android:background="@color/white"
            android:orientation="horizontal">

        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/title_layout"
        android:layout_toEndOf="@id/track_info">

        <TextView
            android:id="@+id/last_race_round"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="true"
            android:fontFamily="@font/orbitron_bold"
            android:text="@string/not_found"
            android:textColor="@color/white"
            android:textSize="@dimen/body_text_size">

        </TextView>

        <LinearLayout
            android:id="@+id/race_podium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/last_race_round"
            android:layout_marginStart="20dp"
            android:layout_marginTop="7dp"
            android:layout_marginEnd="20dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="10dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/orbitron_regular"
                    android:gravity="center"
                    android:text="@string/_1_numeric"
                    android:textColor="@color/white"
                    android:textSize="@dimen/body_text_size">

                </TextView>

                <TextView
                    android:id="@+id/last_race_first"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:autoSizeMaxTextSize="@dimen/body_text_size"
                    android:autoSizeMinTextSize="9sp"
                    android:autoSizeTextType="uniform"
                    android:fontFamily="@font/orbitron_regular"
                    android:maxLines="1"
                    android:text="@string/not_found"
                    android:textColor="@color/white"
                    android:textSize="@dimen/body_text_size">

                </TextView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="10dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/orbitron_regular"
                    android:gravity="center"
                    android:text="@string/_2_numeric"
                    android:textColor="@color/white"
                    android:textSize="@dimen/body_text_size">

                </TextView>

                <TextView
                    android:id="@+id/last_race_second"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:autoSizeMaxTextSize="@dimen/body_text_size"
                    android:autoSizeMinTextSize="9sp"
                    android:autoSizeTextType="uniform"
                    android:fontFamily="@font/orbitron_regular"
                    android:maxLines="1"
                    android:text="@string/not_found"
                    android:textColor="@color/white"
                    android:textSize="@dimen/body_text_size">

                </TextView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="10dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/orbitron_regular"
                    android:gravity="center"
                    android:text="@string/_3_numeric"
                    android:textColor="@color/white"
                    android:textSize="@dimen/body_text_size">

                </TextView>

                <TextView
                    android:id="@+id/last_race_third"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:autoSizeMaxTextSize="@dimen/body_text_size"
                    android:autoSizeMinTextSize="9sp"
                    android:autoSizeTextType="uniform"
                    android:fontFamily="@font/orbitron_regular"
                    android:maxLines="1"
                    android:text="@string/not_found"
                    android:textColor="@color/white"
                    android:textSize="@dimen/body_text_size">

                </TextView>

            </LinearLayout>

        </LinearLayout>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/past_event_result"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_below="@id/race_podium"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:clickable="true"
            android:focusable="true"
            app:cardBackgroundColor="@color/ferrari_f1"
            app:strokeColor="@color/black"
            app:strokeWidth="3dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/raceResult"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/medium_margin"
                    android:autoSizeMaxTextSize="@dimen/body_text_size"
                    android:autoSizeMinTextSize="9sp"
                    android:autoSizeTextType="uniform"
                    android:maxLines="1"
                    android:fontFamily="@font/orbitron_bold"
                    android:text="@string/raceResult"
                    android:textColor="@color/black"
                    android:textSize="@dimen/body_text_size">

                </TextView>

                <ImageView
                    android:layout_width="@dimen/icon_size"
                    android:layout_height="@dimen/icon_size"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="16dp"
                    android:importantForAccessibility="no"
                    android:layout_toEndOf="@id/raceResult"
                    app:srcCompat="@drawable/checkered_flag">

                </ImageView>

            </RelativeLayout>

        </com.google.android.material.card.MaterialCardView>

    </RelativeLayout>

</RelativeLayout>