<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/homepage"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.fragment.HomeFragment">


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_top_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="50dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_end="0dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/screen_background_color"
        app:layout_constraintBottom_toTopOf="@id/guideline_bottom"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


           <FrameLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content">

               <include
                   android:id="@+id/last_race_results"
                     layout="@layout/home_last_race_results_layout"
                   android:visibility="visible"/>

               <include
                     android:id="@+id/season_results"
                        layout="@layout/home_season_final_standings_layout"
                   android:visibility="gone"/>

               <include
                   android:id="@+id/pending_last_race_results"
                        layout="@layout/home_pending_last_race_results_layout"
                   android:visibility="gone"/>
           </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="3dp"

                android:background="@color/white">

            </LinearLayout>

            <FrameLayout
                android:id="@+id/timer_card_countdown"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/medium_margin"
                android:clickable="true"
                android:focusable="true">

                <include layout="@layout/timer_card_home"/>
            </FrameLayout>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="@dimen/medium_margin"
                android:layout_marginTop="@dimen/medium_margin"
                android:layout_marginEnd="@dimen/medium_margin"
                app:strokeColor="@color/black"
                app:strokeWidth="3dp">

                <RelativeLayout
                    android:id="@+id/favourite_driver_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/favourite_driver_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginStart="@dimen/medium_margin"
                        android:layout_marginTop="5dp"
                        android:text="@string/missing_driver_upper_case"
                        android:fontFamily="@font/orbitron_bold"
                        android:textColor="@color/black"
                        android:textSize="18sp">

                    </TextView>

                    <RelativeLayout
                        android:id="@+id/favourite_driver_flag_field"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/favourite_driver_name"
                        android:layout_alignParentStart="true"
                        android:layout_marginTop="5dp"
                        android:layout_marginStart="50dp">

                        <ImageView
                            android:id="@+id/favourite_driver_flag"
                            android:layout_width="50dp"
                            android:layout_height="45dp"
                            android:layout_alignParentStart="true"
                            android:layout_centerHorizontal="true">

                        </ImageView>

                        <TextView
                            android:id="@+id/favourite_driver_nationality"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toEndOf="@id/favourite_driver_flag"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="5dp"
                            android:text="@string/not_found"
                            android:textColor="@color/black"
                            android:fontFamily="@font/orbitron_regular">

                        </TextView>

                    </RelativeLayout>

                    <ImageView
                        android:id="@+id/favourite_driver_pic"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="42dp"
                        android:layout_marginBottom="@dimen/medium_margin"
                        app:srcCompat="@drawable/missing_driver_icon">

                    </ImageView>

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="5dp"
                        app:srcCompat="@drawable/star_fav">

                    </ImageView>

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/favourite_driver_rank"
                        android:layout_width="120dp"
                        android:layout_height="40dp"
                        android:layout_below="@id/favourite_driver_flag_field"
                        android:layout_alignParentStart="true"
                        android:layout_marginStart="30dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="5dp"
                        android:clickable="true"
                        android:focusable="true"
                        app:cardBackgroundColor="@color/mclaren_f1"
                        app:strokeColor="@color/black"
                        app:strokeWidth="3dp">

                        <FrameLayout
                            android:id="@+id/favourite_driver_button_layout"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="5dp">

                            <include layout="@layout/ranking_button_home_rank_layout"
                                android:id="@+id/rank"
                                android:visibility="gone"/>

                            <include layout="@layout/ranking_button_home_missing_favourite_layout"
                                android:id="@+id/missing_favourite"
                                android:visibility="visible"/>
                        </FrameLayout>

                    </com.google.android.material.card.MaterialCardView>


                </RelativeLayout>


            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="@dimen/medium_margin"
                android:layout_marginTop="@dimen/medium_margin"
                android:layout_marginEnd="@dimen/medium_margin"
                app:strokeColor="@color/black"
                app:strokeWidth="3dp">

                <RelativeLayout
                    android:id="@+id/favourite_constructor_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/favourite_constructor_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_marginStart="@dimen/medium_margin"
                        android:layout_marginTop="5dp"
                        android:text="@string/missing_constructor_upper_case"
                        android:fontFamily="@font/orbitron_bold"
                        android:textColor="@color/black"
                        android:textSize="18sp">

                    </TextView>

                    <ImageView
                        android:id="@+id/favourite_constructor_car"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:layout_marginStart="5dp"
                        android:layout_marginEnd="5dp"
                        android:layout_below="@id/favourite_constructor_name"
                        app:srcCompat="@drawable/f1_car_question_mark">

                    </ImageView>

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/favourite_constructor_rank"
                        android:layout_width="120dp"
                        android:layout_height="40dp"
                        android:layout_below="@id/favourite_constructor_car"
                        android:layout_marginStart="30dp"
                        android:layout_alignParentStart="true"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:clickable="true"
                        android:focusable="true"
                        app:cardBackgroundColor="@color/mclaren_f1"
                        app:strokeColor="@color/black"
                        app:strokeWidth="3dp">

                        <FrameLayout
                            android:id="@+id/favourite_constructor_button_layout"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="5dp">

                            <include layout="@layout/ranking_button_home_rank_layout"
                                android:id="@+id/rank"
                                android:visibility="gone"/>

                            <include layout="@layout/ranking_button_home_missing_favourite_layout"
                                android:id="@+id/missing_favourite"
                                android:visibility="visible"/>
                        </FrameLayout>

                    </com.google.android.material.card.MaterialCardView>

                    <RelativeLayout
                        android:id="@+id/favourite_constructor_flag_field"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/favourite_constructor_car"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="42dp"
                        android:layout_marginBottom="5dp">

                        <ImageView
                            android:id="@+id/favourite_constructor_flag"
                            android:layout_width="50dp"
                            android:layout_height="45dp"
                            android:layout_alignParentStart="true"
                            android:layout_centerHorizontal="true">

                        </ImageView>

                        <TextView
                            android:id="@+id/favourite_constructor_nationality"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toEndOf="@id/favourite_constructor_flag"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="5dp"
                            android:text="@string/not_found"
                            android:textColor="@color/black"
                            android:fontFamily="@font/orbitron_regular">

                        </TextView>

                    </RelativeLayout>

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="5dp"
                        app:srcCompat="@drawable/star_fav">

                    </ImageView>

                </RelativeLayout>


            </com.google.android.material.card.MaterialCardView>


        </LinearLayout>

    </ScrollView>

    <include layout="@layout/loading_screen"
        android:id="@+id/loading_screen"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:visibility="gone"/>

</androidx.constraintlayout.widget.ConstraintLayout>