<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constructor_bio_table_row"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    android:orientation="vertical"
    tools:context=".ui.bio.ConstructorBioActivity">

    <LinearLayout
        android:id="@+id/driver_history_row"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        tools:ignore="UselessParent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_weight="2.25"
            android:autoSizeMaxTextSize="@dimen/layout_subtitle_text_size"
            android:autoSizeMinTextSize="@dimen/min_text_resize_1"
            android:autoSizeTextType="uniform"
            android:fontFamily="@font/orbitron_bold"
            android:maxLines="1"
            android:gravity="center"
            android:text="@string/year_upper_case"
            android:textColor="@color/black"
            android:textSize="@dimen/layout_subtitle_text_size">

        </TextView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_weight="2.3"
            android:autoSizeMaxTextSize="@dimen/layout_subtitle_text_size"
            android:autoSizeMinTextSize="@dimen/min_text_resize_1"
            android:autoSizeTextType="uniform"
            android:fontFamily="@font/orbitron_bold"
            android:gravity="center"
            android:maxLines="1"
            android:text="@string/pos_upper_case"
            android:textColor="@color/black"
            android:textSize="@dimen/layout_subtitle_text_size">

        </TextView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_weight="2.3"
            android:autoSizeMaxTextSize="@dimen/layout_subtitle_text_size"
            android:autoSizeMinTextSize="@dimen/min_text_resize_1"
            android:autoSizeTextType="uniform"
            android:fontFamily="@font/orbitron_bold"
            android:gravity="center"
            android:maxLines="1"
            android:text="@string/pts_upper_case"
            android:textColor="@color/black"
            android:textSize="@dimen/layout_subtitle_text_size">

        </TextView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_weight="2.2"
            android:autoSizeMaxTextSize="@dimen/layout_subtitle_text_size"
            android:autoSizeMinTextSize="@dimen/min_text_resize_1"
            android:autoSizeTextType="uniform"
            android:fontFamily="@font/orbitron_bold"
            android:gravity="center"
            android:maxLines="1"
            android:text="@string/wins_upper_case"
            android:textColor="@color/black"
            android:textSize="@dimen/layout_subtitle_text_size">

        </TextView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:layout_weight="2.2"
            android:autoSizeMaxTextSize="@dimen/layout_subtitle_text_size"
            android:autoSizeMinTextSize="@dimen/min_text_resize_1"
            android:autoSizeTextType="uniform"
            android:fontFamily="@font/orbitron_bold"
            android:gravity="center"
            android:maxLines="1"
            android:text="@string/pod_upper_case"
            android:textColor="@color/black"
            android:textSize="@dimen/layout_subtitle_text_size">

        </TextView>

    </LinearLayout>

</LinearLayout>
