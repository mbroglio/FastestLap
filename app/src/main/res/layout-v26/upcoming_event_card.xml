<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/upcoming_events_card_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/medium_margin"
    android:layout_marginTop="8dp"
    android:layout_marginEnd="@dimen/medium_margin"
    android:layout_marginBottom="8dp"
    app:cardBackgroundColor="@color/grey_card"
    app:strokeColor="@color/black"
    app:strokeWidth="3dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/upcoming_track_outline"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginStart="20dp"
            android:importantForAccessibility="no">

        </ImageView>

        <LinearLayout
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:layout_marginStart="20dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:background="@color/white">

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginStart="5dp">

            <TextView
                android:id="@+id/upcoming_round_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerInParent="true"
                android:fontFamily="@font/orbitron_bold"
                android:text="@string/not_found"
                android:textColor="@color/white"
                android:textSize="@dimen/text_minor_importance_size">

            </TextView>

            <TextView
                android:id="@+id/upcoming_gp_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@id/upcoming_date"
                android:layout_below="@id/upcoming_round_number"
                android:layout_centerInParent="true"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:autoSizeMaxTextSize="@dimen/layout_subtitle_text_size"
                android:autoSizeMinTextSize="@dimen/min_text_resize_1"
                android:autoSizeTextType="uniform"
                android:fontFamily="@font/orbitron_bold"
                android:gravity="center"
                android:maxLines="1"
                android:text="@string/not_found"
                android:textColor="@color/white"
                android:textSize="@dimen/layout_subtitle_text_size">

            </TextView>

            <TextView
                android:id="@+id/upcoming_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@id/upcoming_month"
                android:layout_centerInParent="true"
                android:fontFamily="@font/orbitron_regular"
                android:text="@string/not_found"
                android:textColor="@color/white"
                android:textSize="@dimen/body_text_size">

            </TextView>

            <TextView
                android:id="@+id/upcoming_month"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerInParent="true"
                android:fontFamily="@font/orbitron_bold"
                android:text="@string/not_found"
                android:textColor="@color/white"
                android:textSize="@dimen/layout_subtitle_text_size"
                tools:ignore="RelativeOverlap">

            </TextView>

            <RelativeLayout
                android:id="@+id/icon_layout"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true">

                <ImageView
                    android:id="@+id/access_event_icon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:importantForAccessibility="no"
                    app:srcCompat="@drawable/play_icon_white">

                </ImageView>

                <RelativeLayout
                    android:id="@+id/live_event_icon_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true">

                    <ImageView
                        android:id="@+id/upcoming_event_icon"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_centerInParent="true"
                        android:importantForAccessibility="no"
                        app:srcCompat="@drawable/dot_inside_a_circle_red">

                    </ImageView>

                </RelativeLayout>

            </RelativeLayout>


        </RelativeLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>

