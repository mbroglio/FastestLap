<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/timer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/timer_gray"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/next_grand_prix"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="10dp"
            android:fontFamily="@font/orbitron_regular"
            android:text="@string/next_event"
            android:textSize="@dimen/layout_subtitle_text_size"
            android:textColor="@color/black">

        </TextView>

        <TextView
            android:id="@+id/home_next_gp_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_toEndOf="@+id/text_1"
            android:autoSizeMaxTextSize="16sp"
            android:autoSizeMinTextSize="8sp"
            android:autoSizeTextType="uniform"
            android:fontFamily="@font/orbitron_bold"
            android:text="Emilia Romagna Grand Prix"
            android:textColor="@color/black">

        </TextView>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/timer_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/next_grand_prix"
        android:layout_centerInParent="true"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/home_next_gp_flag"
            android:layout_width="55dp"
            android:layout_height="40dp"
            android:layout_gravity="center">

        </ImageView>

        <LinearLayout
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:layout_marginStart="16dp"
            android:background="@color/black"
            android:gravity="center_vertical">

        </LinearLayout>

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="3dp"
            android:columnCount="4"
            android:rowCount="2">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginEnd="20dp"
                android:fontFamily="@font/orbitron_regular"
                android:text="@string/days_upper_case"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColor="@color/black"
                android:textSize="11sp">

            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginEnd="20dp"
                android:fontFamily="@font/orbitron_regular"
                android:text="@string/hours_upper_case"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColor="@color/black"
                android:textSize="11sp">

            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginEnd="20dp"
                android:fontFamily="@font/orbitron_regular"
                android:text="@string/minutes_upper_case"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColor="@color/black"
                android:textSize="11sp">

            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/orbitron_regular"
                android:text="@string/seconds_upper_case"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColor="@color/black"
                android:textSize="11sp">

            </TextView>

            <TextView
                android:id="@+id/next_days_counter"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginEnd="20dp"
                android:gravity="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                android:textColor="@color/black"
                android:textStyle="bold">

            </TextView>

            <TextView
                android:id="@+id/next_hours_counter"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginEnd="20dp"
                android:gravity="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                android:textColor="@color/black"
                android:textStyle="bold">

            </TextView>

            <TextView
                android:id="@+id/next_minutes_counter"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginEnd="20dp"
                android:gravity="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                android:textColor="@color/black"
                android:textStyle="bold">

            </TextView>

            <TextView
                android:id="@+id/next_seconds_counter"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                android:textColor="@color/black"
                android:textStyle="bold">

            </TextView>

        </GridLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/next_session_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/timer_layout"
        android:layout_centerInParent="true"
        android:layout_marginBottom="5dp"
        android:fontFamily="@font/orbitron_bold"
        android:text="@string/not_found"
        android:textSize="@dimen/body_text_size"
        android:textColor="@color/black">

    </TextView>


    <LinearLayout
        android:id="@+id/timer_live_layout"
        android:layout_width="wrap_content"
        android:layout_height="15dp"
        android:layout_below="@id/timer_layout"
        android:layout_marginStart="20dp"
        android:visibility="visible"
        android:layout_alignParentEnd="true">

        <TextView
            android:id="@+id/live_now"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/orbitron_bold"
            android:text="LIVE"
            android:textSize="@dimen/body_text_size"
            android:textColor="@color/black">

        </TextView>

        <ImageView
            android:id="@+id/live_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            app:srcCompat="@drawable/dot_inside_a_circle_red">

        </ImageView>
    </LinearLayout>

</RelativeLayout>