<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/homepage"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomePageActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/top_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/top_bar_height"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/topAppBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/ferrari_f1"
            android:minHeight="?attr/actionBarSize"
            app:menu="@menu/top_app_bar"
            app:title="FASTEST LAP"
            app:titleCentered="true" />
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_top_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="50dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_end="0dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/sfondo_prova"
        app:layout_constraintBottom_toTopOf="@id/guideline_bottom"
        app:layout_constraintTop_toBottomOf="@+id/guideline_top_bar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/small_margin"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/last_gp"
                        android:textColor="@color/white"
                        android:layout_marginStart="@dimen/small_margin"
                        android:textSize="20dp">

                    </TextView>

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        app:srcCompat="@drawable/monza_track">

                    </ImageView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="3dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/small_margin"
                    android:background="@color/white">

                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/grand_prix"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/last_race"
                        android:layout_centerInParent="true"
                        android:text="Round 29"
                        android:textColor="@color/white"></TextView>

                    <TextView
                        android:id="@+id/last_race"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/small_margin"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:text="@string/last_race"
                        android:textColor="@color/white">

                    </TextView>

                    <LinearLayout
                        android:id="@+id/race_podium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/grand_prix"
                        android:layout_centerInParent="true"
                        android:layout_marginTop="@dimen/small_margin"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="10dp"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="1"
                                android:textColor="@color/white"
                                android:textSize="12sp">

                            </TextView>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="5dp"
                                android:text="George Russell"
                                android:textColor="@color/white"
                                android:textSize="12sp">

                            </TextView>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="10dp"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="2"
                                android:textColor="@color/white"
                                android:textSize="12sp">

                            </TextView>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="5dp"
                                android:text="Lewis Hamilton"
                                android:textColor="@color/white"
                                android:textSize="12sp">

                            </TextView>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="10dp"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="3"
                                android:textColor="@color/white"
                                android:textSize="12sp">

                            </TextView>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="5dp"
                                android:text="Carlos Sainz"
                                android:textColor="@color/white"
                                android:textSize="12sp">

                            </TextView>

                        </LinearLayout>
                    </LinearLayout>

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/driver_current_standing"
                        android:layout_width="120dp"
                        android:layout_height="45dp"
                        android:layout_alignParentBottom="true"
                        android:layout_centerInParent="true"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:clickable="true"
                        android:focusable="true"
                        app:cardBackgroundColor="@color/ferrari_f1"
                        app:strokeColor="@color/sfondo_prova">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginStart="@dimen/small_margin"
                                android:text="RESULT"
                                android:textColor="@color/black">

                            </TextView>

                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_alignParentEnd="true"
                                android:layout_centerVertical="true"
                                android:layout_marginEnd="@dimen/small_margin"
                                app:srcCompat="@drawable/checkered_flag">

                            </ImageView>


                        </RelativeLayout>

                    </com.google.android.material.card.MaterialCardView>


                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_marginTop="8dp"
                android:background="@color/white">

            </LinearLayout>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/small_margin">

                <LinearLayout
                    android:id="@+id/timer"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0"
                    android:background="@color/timer_gray"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/small_margin"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/small_margin"
                            android:textColor="@color/black"
                            android:text="@string/next_session">

                        </TextView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:layout_marginLeft="@dimen/small_margin"
                            android:text="-">

                        </TextView>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:layout_gravity="center"
                            android:layout_marginLeft="@dimen/small_margin"
                            android:text="@string/last_gp">

                        </TextView>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/small_margin"
                        android:layout_marginBottom="@dimen/small_margin"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/small_margin"
                            android:layout_marginTop="@dimen/small_margin"
                            app:srcCompat="@drawable/italy">

                        </ImageView>

                        <LinearLayout
                            android:layout_width="2dp"
                            android:layout_height="match_parent"
                            android:layout_marginStart="@dimen/small_margin"
                            android:background="@color/black">

                        </LinearLayout>

                        <GridLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/small_margin"
                            android:layout_marginTop="@dimen/small_margin"
                            android:columnCount="4"
                            android:rowCount="2">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginEnd="20dp"
                                android:text="DAYS"
                                android:textColor="@color/black"
                                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                                android:textSize="11sp">

                            </TextView>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/black"
                                android:layout_gravity="center"
                                android:layout_marginEnd="20dp"
                                android:text="HRS"
                                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                                android:textSize="11sp">

                            </TextView>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginEnd="20dp"
                                android:text="MIN"
                                android:textColor="@color/black"
                                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                                android:textSize="11sp">

                            </TextView>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginEnd="20dp"
                                android:text="SEC"
                                android:textColor="@color/black"
                                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                                android:textSize="11sp">

                            </TextView>

                            <TextView
                                android:id="@+id/days_counter"
                                android:layout_width="40dp"
                                android:textColor="@color/black"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginEnd="20dp"
                                android:gravity="center"
                                android:text="00"
                                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                                android:textStyle="bold">

                            </TextView>

                            <TextView
                                android:id="@+id/hours_counter"
                                android:layout_width="40dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginEnd="20dp"
                                android:gravity="center"
                                android:textColor="@color/black"
                                android:text="00"
                                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                                android:textStyle="bold">

                            </TextView>

                            <TextView
                                android:id="@+id/minutes_counter"
                                android:layout_width="40dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginEnd="20dp"
                                android:gravity="center"
                                android:textColor="@color/black"
                                android:text="00"
                                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                                android:textStyle="bold">

                            </TextView>

                            <TextView
                                android:id="@+id/seconds_counter"
                                android:layout_width="40dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginEnd="20dp"
                                android:gravity="center"
                                android:textColor="@color/black"
                                android:text="00"
                                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                                android:textStyle="bold">

                            </TextView>

                        </GridLayout>
                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

          <com.google.android.material.card.MaterialCardView
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_gravity="center_horizontal"
              android:background="@color/alpine_f1"
              android:layout_marginTop="@dimen/small_margin"
              android:layout_marginEnd="@dimen/small_margin"
              android:layout_marginStart="@dimen/small_margin">

              <RelativeLayout
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:background="@color/alpine_f1">

                  <TextView
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="@string/alexander_albon"
                      android:layout_marginTop="@dimen/small_margin"
                      android:layout_marginStart="@dimen/small_margin"
                      android:layout_alignParentTop="true"
                      android:layout_alignParentStart="true"
                      android:textColor="@color/black"
                      android:id="@+id/driver_name"
                      android:textSize="18sp">

                  </TextView>

                  <ImageView
                      android:layout_width="50dp"
                      android:layout_height="50dp"
                      android:layout_marginTop="@dimen/small_margin"
                      android:layout_marginStart="50dp"
                      android:layout_alignParentStart="true"
                      android:layout_below="@id/driver_name"
                      android:id="@+id/driver_flag"
                      app:srcCompat="@drawable/thailand">

                  </ImageView>

                  <ImageView
                      android:layout_width="100dp"
                      android:layout_height="100dp"
                      app:srcCompat="@drawable/albon_pic"
                      android:layout_alignParentEnd="true"
                      android:layout_marginEnd="42dp"
                      android:layout_centerVertical="true">

                  </ImageView>

                  <ImageView
                      android:layout_width="20dp"
                      android:layout_height="20dp"
                      android:layout_alignParentEnd="true"
                      android:layout_alignParentTop="true"
                      android:layout_marginEnd="@dimen/small_margin"
                      android:layout_marginTop="@dimen/small_margin"
                      app:srcCompat="@drawable/star_fav">

                  </ImageView>

                  <com.google.android.material.card.MaterialCardView
                      android:id="@+id/driver_rank"
                      android:layout_width="90dp"
                      android:layout_height="40dp"
                      android:layout_alignParentStart="true"
                      android:layout_alignParentBottom="true"
                      android:layout_marginStart="30dp"
                      android:layout_marginTop="@dimen/small_margin"
                      android:layout_below="@id/driver_flag"
                      android:clickable="true"
                      android:focusable="true"
                      app:cardBackgroundColor="@color/ferrari_f1"
                      app:strokeColor="@color/sfondo_prova">

                      <RelativeLayout
                          android:layout_width="match_parent"
                          android:layout_height="match_parent">

                          <TextView
                              android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:layout_centerVertical="true"
                              android:layout_marginStart="@dimen/small_margin"
                              android:text="1°"
                              android:textColor="@color/black">

                          </TextView>

                          <TextView
                              android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:layout_alignParentEnd="true"
                              android:layout_centerVertical="true"
                              android:layout_marginStart="@dimen/small_margin"
                              android:layout_marginEnd="@dimen/small_margin"
                              android:text="250pt"
                              android:textColor="@color/black">

                          </TextView>


                      </RelativeLayout>

                  </com.google.android.material.card.MaterialCardView>



              </RelativeLayout>


          </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="@dimen/small_margin"
                android:layout_marginTop="@dimen/small_margin"
                android:layout_marginEnd="@dimen/small_margin"
                android:background="@color/ferrari_secondary">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/ferrari_secondary">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/ferrari"
                        android:textColor="@color/black"
                        android:layout_alignParentStart="true"
                        android:id="@+id/constructor_name"
                        android:textSize="18sp"
                        android:layout_marginTop="@dimen/small_margin"
                        android:layout_marginStart="@dimen/small_margin">

                    </TextView>

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:id="@+id/image_car"
                        app:srcCompat="@drawable/ferrari"
                        android:layout_below="@id/constructor_name">

                    </ImageView>

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/constructor_rank"
                        android:layout_width="90dp"
                        android:layout_height="40dp"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentBottom="true"
                        android:layout_below="@+id/image_car"
                        android:layout_marginStart="@dimen/small_margin"
                        android:clickable="true"
                        android:focusable="true"
                        app:cardBackgroundColor="@color/ferrari_f1"
                        app:strokeColor="@color/sfondo_prova">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginStart="@dimen/small_margin"
                                android:text="1°"
                                android:textColor="@color/black">

                            </TextView>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_centerVertical="true"
                                android:layout_marginStart="@dimen/small_margin"
                                android:layout_marginEnd="@dimen/small_margin"
                                android:text="250pt"
                                android:textColor="@color/black">

                            </TextView>


                        </RelativeLayout>

                    </com.google.android.material.card.MaterialCardView>

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginEnd="@dimen/small_margin"
                        app:srcCompat="@drawable/italy">

                    </ImageView>

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginEnd="@dimen/small_margin"
                        android:layout_marginTop="@dimen/small_margin"
                        app:srcCompat="@drawable/star_fav">

                    </ImageView>

                </RelativeLayout>



            </com.google.android.material.card.MaterialCardView>


        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>