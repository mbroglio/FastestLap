<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/homepage"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.HomePageActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/top_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/top_bar_height"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/topAppBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/ferrari_f1"
            android:minHeight="?attr/actionBarSize"
            app:menu="@menu/top_app_bar"
            app:title="FASTEST LAP"
            app:titleCentered="true" />
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_top_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="50dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_end="0dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/sfondo_prova"
        app:layout_constraintBottom_toTopOf="@id/guideline_bottom"
        app:layout_constraintTop_toBottomOf="@+id/guideline_top_bar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/last_race_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:id="@+id/last_race_name_layout"
                            android:layout_width="170dp"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bottom_right_stroke">

                            <TextView
                                android:id="@+id/last_race_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="5dp"
                                android:layout_marginEnd="8dp"
                                android:text="-!-"
                                android:textColor="@color/white"
                                android:textSize="20sp"
                                android:fontFamily="@font/orbitron_bold">

                            </TextView>

                        </LinearLayout>


                        <ImageView
                            android:id="@+id/last_race_track_outline"
                            android:layout_width="120dp"
                            android:layout_height="100dp"
                            android:layout_below="@id/last_race_name_layout"
                            android:layout_centerHorizontal="true"
                            app:srcCompat="@drawable/monza_track">

                        </ImageView>

                        <TextView
                            android:id="@+id/last_race_date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/last_race_track_outline"
                            android:layout_centerHorizontal="true"
                            android:text="-!-"
                            android:textColor="@color/white">

                        </TextView>

                        <TextView
                            android:id="@+id/last_race_month"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/last_race_date"
                            android:layout_centerHorizontal="true"
                            android:layout_marginBottom="@dimen/small_margin"
                            android:text="-!-"
                            android:textColor="@color/white">

                        </TextView>

                        <LinearLayout
                            android:layout_width="3dp"
                            android:layout_height="match_parent"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:layout_below="@id/last_race_name_layout"
                            android:layout_marginStart="162dp"
                            android:background="@color/white">

                        </LinearLayout>


                    </RelativeLayout>
                </LinearLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/last_race_round"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/last_race"
                        android:layout_centerInParent="true"
                        android:text="Round 29"
                        android:textColor="@color/white">

                    </TextView>

                    <TextView
                        android:id="@+id/last_race"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="@dimen/small_margin"
                        android:text="@string/last_race"
                        android:textColor="@color/white" />

                    <LinearLayout
                        android:id="@+id/race_podium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/last_race_round"
                        android:layout_alignParentStart="true"
                        android:layout_marginStart="40dp"
                        android:layout_centerInParent="true"
                        android:layout_marginTop="@dimen/small_margin"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="10dp"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="1"
                                android:textColor="@color/white"
                                android:textSize="12sp">

                            </TextView>

                            <TextView
                                android:id="@+id/last_race_first"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="5dp"
                                android:text="George Russell"
                                android:textColor="@color/white"
                                android:textSize="12sp">

                            </TextView>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="10dp"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="2"
                                android:textColor="@color/white"
                                android:textSize="12sp">

                            </TextView>

                            <TextView
                                android:id="@+id/last_race_second"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="5dp"
                                android:text="Lewis Hamilton"
                                android:textColor="@color/white"
                                android:textSize="12sp">

                            </TextView>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="10dp"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="3"
                                android:textColor="@color/white"
                                android:textSize="12sp">

                            </TextView>

                            <TextView
                                android:id="@+id/last_race_third"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="5dp"
                                android:text="Carlos Sainz"
                                android:textColor="@color/white"
                                android:textSize="12sp">

                            </TextView>

                        </LinearLayout>
                    </LinearLayout>

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/driver_current_standing"
                        android:layout_width="120dp"
                        android:layout_height="45dp"
                        android:layout_alignParentBottom="true"
                        android:layout_centerInParent="true"
                        android:layout_marginBottom="5dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:clickable="true"
                        android:focusable="true"
                        app:cardBackgroundColor="@color/ferrari_f1"
                        app:strokeColor="@color/sfondo_prova">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginStart="@dimen/small_margin"
                                android:text="@string/result"
                                android:textColor="@color/black">

                            </TextView>

                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_alignParentEnd="true"
                                android:layout_centerVertical="true"
                                android:layout_marginEnd="@dimen/small_margin"
                                app:srcCompat="@drawable/checkered_flag">

                            </ImageView>


                        </RelativeLayout>

                    </com.google.android.material.card.MaterialCardView>


                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="3dp"

                android:background="@color/white">

            </LinearLayout>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginTop="@dimen/small_margin"
                android:layout_marginEnd="40dp">

                <include layout="@layout/timer_card_home" />
            </FrameLayout>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="@dimen/small_margin"
                android:layout_marginTop="@dimen/small_margin"
                android:layout_marginEnd="@dimen/small_margin"
                android:background="@color/alpine_f1">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/alpine_f1">

                    <TextView
                        android:id="@+id/favourite_driver_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginStart="@dimen/small_margin"
                        android:layout_marginTop="5dp"
                        android:text="@string/alexander_albon"
                        android:textColor="@color/black"
                        android:textSize="18sp">

                    </TextView>

                    <LinearLayout
                        android:id="@+id/favourite_driver_flag_field"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/favourite_driver_name"
                        android:layout_alignParentStart="true"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/favourite_driver_flag"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_marginStart="50dp"
                            android:layout_marginTop="5dp"
                            app:srcCompat="@drawable/thailand">

                        </ImageView>

                        <TextView
                            android:id="@+id/favourite_driver_nationality"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginStart="5dp"
                            android:layout_marginTop="5dp"
                            android:gravity="center_vertical"
                            android:textColor="@color/black"
                            android:text="@string/not_found">

                        </TextView>

                    </LinearLayout>

                    <ImageView
                        android:id="@+id/favourite_driver_pic"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="42dp"
                        android:layout_marginBottom="@dimen/small_margin"
                        app:srcCompat="@drawable/albon_pic">

                    </ImageView>

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="5dp"
                        app:srcCompat="@drawable/star_fav">

                    </ImageView>

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/driver_rank"
                        android:layout_width="90dp"
                        android:layout_height="40dp"
                        android:layout_below="@id/favourite_driver_flag_field"
                        android:layout_alignParentStart="true"
                        android:layout_marginStart="30dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="5dp"
                        android:clickable="true"
                        android:focusable="true"
                        app:cardBackgroundColor="@color/ferrari_f1"
                        app:strokeColor="@color/sfondo_prova">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:id="@+id/favourite_driver_position"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginStart="@dimen/small_margin"
                                android:text="@string/not_found"
                                android:textColor="@color/black">

                            </TextView>

                            <TextView
                                android:id="@+id/favourite_driver_points"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_centerVertical="true"
                                android:layout_marginStart="@dimen/small_margin"
                                android:layout_marginEnd="@dimen/small_margin"
                                android:text="@string/not_found"
                                android:textColor="@color/black">

                            </TextView>


                        </RelativeLayout>

                    </com.google.android.material.card.MaterialCardView>


                </RelativeLayout>


            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="@dimen/small_margin"
                android:layout_marginTop="@dimen/small_margin"
                android:layout_marginEnd="@dimen/small_margin"
                android:background="@color/ferrari_secondary">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/ferrari_secondary">

                    <TextView
                        android:id="@+id/favourite_constructor_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_marginStart="@dimen/small_margin"
                        android:layout_marginTop="5dp"
                        android:text="@string/ferrari"
                        android:textColor="@color/black"
                        android:textSize="18sp">

                    </TextView>

                    <ImageView
                        android:id="@+id/favourite_constructor_car"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"

                        android:layout_below="@id/favourite_constructor_name"
                        app:srcCompat="@drawable/ferrari">

                    </ImageView>

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="90dp"
                        android:layout_height="40dp"
                        android:layout_below="@+id/favourite_constructor_car"
                        android:layout_alignParentStart="true"
                        android:layout_marginBottom="5dp"
                        android:layout_marginStart="@dimen/small_margin"
                        android:clickable="true"
                        android:focusable="true"
                        app:cardBackgroundColor="@color/ferrari_f1"
                        app:strokeColor="@color/sfondo_prova">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:id="@+id/favourite_constructor_position"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginStart="@dimen/small_margin"
                                android:text="@string/not_found"
                                android:textColor="@color/black">

                            </TextView>

                            <TextView
                                android:id="@+id/favourite_constructor_points"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_centerVertical="true"
                                android:layout_marginStart="@dimen/small_margin"
                                android:layout_marginEnd="@dimen/small_margin"
                                android:text="@string/not_found"
                                android:textColor="@color/black">

                            </TextView>


                        </RelativeLayout>

                    </com.google.android.material.card.MaterialCardView>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/favourite_constructor_car"
                        android:layout_alignParentEnd="true"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/favourite_constructor_flag"
                            android:layout_width="50dp"
                            android:layout_height="40dp"
                            android:layout_marginEnd="@dimen/small_margin"
                            android:layout_marginBottom="5dp"
                            app:srcCompat="@drawable/italy">

                        </ImageView>

                        <TextView
                            android:id="@+id/favourite_constructor_nationality"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginStart="5dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginEnd="5dp"
                            android:textColor="@color/black"
                            android:gravity="center_vertical"
                            android:text="@string/not_found">

                        </TextView>


                    </LinearLayout>

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="5dp"
                        app:srcCompat="@drawable/star_fav">

                    </ImageView>

                </RelativeLayout>


            </com.google.android.material.card.MaterialCardView>


        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>