<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/screen_background_color"
    tools:context=".ui.live.LiveActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/top_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/top_bar_height"
        android:background="@android:color/transparent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/top_app_bar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/top_bar_height"
            android:layout_marginTop="0dp"
            android:background="@android:color/transparent"
            app:navigationIcon="@drawable/arrow_back_ios_style"
            app:navigationIconTint="@color/white"
            app:title="ABU DHABI GRAND PRIX"
            app:titleCentered="true"
            app:titleTextAppearance="@style/OrbitronBold_AutoSize_top_bar"
            app:titleTextColor="@color/white" />
    </com.google.android.material.appbar.AppBarLayout>

    <TextView
        android:id="@+id/session_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/orbitron_bold"
        android:gravity="center"
        android:text="Race"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/top_bar_layout">

    </TextView>

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tab_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@android:color/transparent"
        app:layout_constraintTop_toBottomOf="@id/session_text"
        app:tabIndicatorColor="@color/white"
        app:tabMode="fixed"
        app:tabRippleColor="@android:color/transparent"
        app:tabSelectedTextAppearance="@style/TextAppearance.OrbitronBold_15sp_black"
        app:tabTextAppearance="@style/TextAppearance.OrbitronRegular_13sp_black"
        app:tabTextColor="@color/white">

        <com.google.android.material.tabs.TabItem
            android:id="@+id/live_tab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LIVE" />

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="RACE CONTROL" />

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="VERSUS" />

    </com.google.android.material.tabs.TabLayout>

    <LinearLayout
        android:id="@+id/separator_1"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:background="@color/white"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/tab_layout">

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/session_situation_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/separator_1">

        <CheckBox
            android:id="@+id/full_telemetry_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="5dp"
            android:buttonTint="@color/white"
            android:checked="false"
            android:fontFamily="@font/orbitron_regular"
            android:gravity="center"
            android:text="Full\ntelemetry"
            android:textColor="@color/white"
            android:textSize="11sp"
            app:buttonIconTint="@color/black">

        </CheckBox>

        <RelativeLayout
            android:id="@+id/event_situation_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="true">

            <View
                android:id="@+id/event_situation_light_1"
                android:layout_width="@dimen/icon_24_dp"
                android:layout_height="@dimen/icon_24_dp"
                android:layout_alignParentStart="true"
                android:layout_centerInParent="true"
                android:background="@drawable/circle_background_black"
                android:backgroundTint="@color/white">

            </View>

            <LinearLayout
                android:id="@+id/event_situation_text_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_toEndOf="@id/event_situation_light_1"
                android:background="@drawable/background_all_margins_filled_white">

                <TextView
                    android:id="@+id/event_situation_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:fontFamily="@font/orbitron_bold"
                    android:gravity="center"
                    android:text="YELLOW\nFLAG"
                    android:textColor="@color/black">

                </TextView>

            </LinearLayout>

            <View
                android:id="@+id/event_situation_light_2"
                android:layout_width="@dimen/icon_24_dp"
                android:layout_height="@dimen/icon_24_dp"
                android:layout_centerInParent="true"
                android:layout_marginStart="5dp"
                android:layout_toEndOf="@id/event_situation_text_layout"
                android:background="@drawable/circle_background_black"
                android:backgroundTint="@color/white">

            </View>

        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="15dp"
            android:text="LAP: 10/53"
            android:fontFamily="@font/orbitron_bold"
            android:textColor="@color/white">

        </TextView>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/separator_2"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_marginTop="5dp"
        android:background="@color/white"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/session_situation_layout">

    </LinearLayout>


    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/separator_2">

    </androidx.viewpager2.widget.ViewPager2>

</androidx.constraintlayout.widget.ConstraintLayout>