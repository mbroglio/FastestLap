<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/news_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:layout_marginBottom="8dp"
    android:background="@color/light_black"
    android:padding="8dp">

    <ImageView
        android:id="@+id/news_image"
        android:layout_width="120dp"
        android:layout_height="80dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:importantForAccessibility="no"
        android:scaleType="centerCrop"
        android:visibility="visible" />

    <LinearLayout
        android:id="@+id/text_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_toEndOf="@id/news_image"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/orbitron_bold"
            android:gravity="start"
            android:maxLines="5"
            android:textColor="@color/white"
            android:textSize="@dimen/layout_subtitle_text_size" />

        <TextView
            android:id="@+id/description_text_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/orbitron_regular"
            android:maxLines="20"
            android:textColor="@color/white"
            android:textSize="@dimen/body_text_size"
            android:visibility="gone" />

        <RelativeLayout
            android:id="@+id/link_text_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="4dp"
            android:background="@color/ferrari_secondary"
            android:visibility="visible">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/orbitron_bold"
                android:padding="5dp"
                android:text="@string/full_article_upper_case"
                android:textColor="@color/black"
                android:textSize="@dimen/body_text_size"
                android:textStyle="bold" />

        </RelativeLayout>

        <TextView
            android:id="@+id/date_text_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:fontFamily="@font/orbitron_bold"
            android:textColor="@color/white"
            android:textSize="@dimen/text_minor_importance_size" />

    </LinearLayout>

</RelativeLayout>