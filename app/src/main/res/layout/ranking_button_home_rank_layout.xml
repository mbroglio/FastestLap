<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/driver_rank_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="15dp"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/podium">

        </ImageView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="3dp"
            android:fontFamily="@font/orbitron_bold"
            android:text="@string/rank"
            android:textSize="12sp"
            android:textColor="@color/screen_background_color">

        </TextView>

    </LinearLayout>

    <LinearLayout
        android:layout_below="@id/driver_rank_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/favourite_driver_position"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/orbitron_bold"
            android:layout_marginStart="5dp"
            android:text="@string/not_found"
            android:textColor="@color/screen_background_color"
            android:textSize="12sp">

        </TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:fontFamily="@font/orbitron_bold"
            android:text="@string/separator_high_dash"
            android:textColor="@color/screen_background_color"
            android:textSize="12sp">

        </TextView>

        <TextView
            android:id="@+id/favourite_driver_points"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/orbitron_bold"
            android:gravity="center"
            android:text="@string/not_found"
            android:textColor="@color/screen_background_color"
            android:textSize="12sp">

        </TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="3dp"
            android:layout_marginEnd="5dp"
            android:fontFamily="@font/orbitron_regular"
            android:text="@string/points_upper_case"
            android:textColor="@color/screen_background_color"
            android:textSize="10sp">

        </TextView>

    </LinearLayout>


</RelativeLayout>