<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/race_result"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical">

    <TextView
        android:id="@+id/race_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/orbitron_bold"
        android:text="@string/race_result_upper_case"
        android:textColor="@color/black"
        android:textSize="@dimen/layout_title_2_text_size">

    </TextView>

    <LinearLayout
        android:id="@+id/race_podium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/race_text"
        android:layout_marginStart="@dimen/medium_margin"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="13dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/orbitron_bold"
                android:gravity="center"
                android:text="@string/_1_numeric"
                android:textColor="@color/black"
                android:textSize="@dimen/layout_subtitle_text_size">

            </TextView>

            <LinearLayout
                android:id="@+id/first_color"
                android:layout_width="8dp"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:orientation="vertical">

            </LinearLayout>

            <TextView
                android:id="@+id/first_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:fontFamily="@font/orbitron_regular"
                android:text="@string/not_found"
                android:textColor="@color/black"
                android:textSize="@dimen/body_text_size">

            </TextView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="13dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/orbitron_bold"
                android:gravity="center"
                android:text="@string/_2_numeric"
                android:textColor="@color/black"
                android:textSize="@dimen/layout_subtitle_text_size">

            </TextView>

            <LinearLayout
                android:id="@+id/second_color"
                android:layout_width="8dp"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:orientation="vertical">

            </LinearLayout>

            <TextView
                android:id="@+id/second_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:fontFamily="@font/orbitron_regular"
                android:text="@string/not_found"
                android:textColor="@color/black"
                android:textSize="@dimen/body_text_size">

            </TextView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="13dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/orbitron_bold"
                android:gravity="center"
                android:text="@string/_3_numeric"
                android:textColor="@color/black"
                android:textSize="@dimen/layout_subtitle_text_size">

            </TextView>

            <LinearLayout
                android:id="@+id/third_color"
                android:layout_width="8dp"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:orientation="vertical">

            </LinearLayout>

            <TextView
                android:id="@+id/third_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:fontFamily="@font/orbitron_regular"
                android:text="@string/not_found"
                android:textColor="@color/black"
                android:textSize="@dimen/body_text_size">

            </TextView>

        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/race_podium"
        android:layout_alignBottom="@id/race_podium"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@id/race_podium">

        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_centerInParent="true"
            android:layout_marginEnd="15dp"
            android:importantForAccessibility="no"
            app:srcCompat="@drawable/checkered_flag">

        </ImageView>

    </RelativeLayout>

</RelativeLayout>
