<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/next_session_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        app:cardCornerRadius="10dp"
        app:cardElevation="5dp">

        <LinearLayout
            android:id="@+id/countdown_and_track"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:background="@drawable/gradient_grey_horizontal"
            android:baselineAligned="false"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="270dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/countdown"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/orbitron_regular"
                        android:text="Next Session in:">

                    </TextView>

                    <GridLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="15dp"
                        android:columnCount="4"
                        android:rowCount="2">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginEnd="20dp"
                            android:fontFamily="@font/orbitron_regular"
                            android:text="DAYS"
                            android:textAppearance="@style/TextAppearance.AppCompat.Small"
                            android:textSize="11sp">

                        </TextView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginEnd="20dp"
                            android:fontFamily="@font/orbitron_regular"
                            android:text="HRS"
                            android:textAppearance="@style/TextAppearance.AppCompat.Small"
                            android:textSize="11sp">

                        </TextView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginEnd="20dp"
                            android:fontFamily="@font/orbitron_regular"
                            android:text="MIN"
                            android:textAppearance="@style/TextAppearance.AppCompat.Small"
                            android:textSize="11sp">

                        </TextView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginEnd="20dp"
                            android:fontFamily="@font/orbitron_regular"
                            android:text="SEC"
                            android:textAppearance="@style/TextAppearance.AppCompat.Small"
                            android:textSize="11sp">

                        </TextView>

                        <TextView
                            android:id="@+id/days_counter"
                            android:layout_width="40dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginEnd="20dp"
                            android:gravity="center"
                            android:text="00"
                            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                            android:textStyle="bold">

                        </TextView>

                        <TextView
                            android:id="@+id/hours_counter"
                            android:layout_width="40dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginEnd="20dp"
                            android:gravity="center"
                            android:text="00"
                            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                            android:textStyle="bold">

                        </TextView>

                        <TextView
                            android:id="@+id/minutes_counter"
                            android:layout_width="40dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginEnd="20dp"
                            android:gravity="center"
                            android:text="00"
                            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                            android:textStyle="bold">

                        </TextView>

                        <TextView
                            android:id="@+id/seconds_counter"
                            android:layout_width="40dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginEnd="20dp"
                            android:gravity="center"
                            android:text="00"
                            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                            android:textStyle="bold">

                        </TextView>

                    </GridLayout>

                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/race_result"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0"
                    android:clickable="true"
                    android:focusable="true"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/race_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/orbitron_bold"
                        android:text="RACE RESULT:">

                    </TextView>

                    <LinearLayout
                        android:id="@+id/race_podium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/race_text"
                        android:layout_marginStart="30dp"
                        android:layout_marginTop="10dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="10dp"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/orbitron_bold"
                                android:text="1">

                            </TextView>

                            <LinearLayout
                                android:layout_width="8dp"
                                android:layout_height="match_parent"
                                android:layout_marginStart="10dp"
                                android:background="@color/mercedes_f1">

                            </LinearLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="5dp"
                                android:fontFamily="@font/orbitron_regular"
                                android:text="George Russell">

                            </TextView>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="10dp"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/orbitron_bold"
                                android:gravity="center"
                                android:text="2">

                            </TextView>

                            <LinearLayout
                                android:layout_width="8dp"
                                android:layout_height="match_parent"
                                android:layout_marginStart="10dp"
                                android:background="@color/mercedes_f1">

                            </LinearLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="5dp"
                                android:fontFamily="@font/orbitron_regular"
                                android:text="Lewis Hamilton">

                            </TextView>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="10dp"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/orbitron_bold"
                                android:text="3">

                            </TextView>

                            <LinearLayout
                                android:layout_width="8dp"
                                android:layout_height="match_parent"
                                android:layout_marginStart="10dp"
                                android:background="@color/ferrari_f1">

                            </LinearLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="5dp"
                                android:fontFamily="@font/orbitron_regular"
                                android:text="Carlos Sainz">

                            </TextView>

                        </LinearLayout>

                    </LinearLayout>


                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginEnd="5dp"
                        android:layout_marginBottom="5dp"
                        app:srcCompat="@drawable/arrow_pointing_right_down">

                    </ImageView>

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerInParent="true"
                        android:layout_marginEnd="15dp"
                        app:srcCompat="@drawable/checkered_flag">

                    </ImageView>


                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:fontFamily="@font/orbitron_bold"
                        android:text="Pending\nresults..."
                        android:textColor="@color/sfondo_prova"
                        android:textSize="25sp">

                    </TextView>

                </RelativeLayout>


            </LinearLayout>


            <LinearLayout
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:background="@color/sfondo_prova">

            </LinearLayout>

            <LinearLayout
                android:id="@+id/track_pic"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:clickable="true"
                android:focusable="true">

                <ImageView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    app:srcCompat="@drawable/f1_2024_lve_outline">

                </ImageView>
            </LinearLayout>


        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</LinearLayout>