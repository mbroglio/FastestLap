<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/timer_gray"
    app:strokeColor="@color/black">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp">

        <LinearLayout
            android:id="@+id/message_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="true"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/flag_1"
                android:layout_width="@dimen/icon_24_dp"
                android:layout_height="@dimen/icon_24_dp"
                android:src="@drawable/black_and_white_flag_panel_icon">

            </ImageView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:fontFamily="@font/orbitron_bold"
                android:text="BLACK AND WHITE"
                android:textColor="@color/black"
                android:textSize="16sp">

            </TextView>

            <ImageView
                android:id="@+id/flag_2"
                android:layout_width="@dimen/icon_24_dp"
                android:layout_height="@dimen/icon_24_dp"
                android:src="@drawable/black_and_white_flag_panel_icon">

            </ImageView>

        </LinearLayout>

        <View
            android:id="@+id/divider"
            android:layout_width="0dp"
            android:layout_height="3dp"
            android:layout_centerInParent="true"
            android:layout_alignStart="@id/message_text_layout"
            android:layout_alignEnd="@id/message_text_layout"
            android:layout_below="@id/message_title"
            android:layout_marginTop="5dp"
            android:background="@color/black">

        </View>

        <RelativeLayout
            android:id="@+id/message_text_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_below="@id/divider"
            android:layout_marginTop="5dp">

            <LinearLayout
                android:id="@+id/driver_involved_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerInParent="true"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/driver_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/orbitron_regular"
                    android:text="Lewis Hamilton"
                    android:textColor="@color/black">

                </TextView>

                <ImageView
                    android:layout_width="@dimen/icon_24_dp"
                    android:layout_height="@dimen/icon_24_dp"
                    android:layout_marginStart="5dp"
                    android:src="@drawable/mercedeslogo">

                </ImageView>

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/driver_involved_layout"
                android:layout_marginTop="3dp"
                android:layout_centerInParent="true"
                android:fontFamily="@font/orbitron_bold"
                android:gravity="center"
                android:text="BLACK AND WHITE FLAG FOR CAR 44 (HAM) - WEAVING ON STRAIGHT"
                android:textColor="@color/black"
                android:textSize="13sp">

            </TextView>

        </RelativeLayout>

    </RelativeLayout>

</com.google.android.material.card.MaterialCardView>




