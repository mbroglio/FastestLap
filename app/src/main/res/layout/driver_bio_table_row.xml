<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="?materialCardViewElevatedStyle"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    tools:context=".ui.bio.DriverBioActivity">

    <LinearLayout
        android:id="@+id/driver_history_row"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/season_year"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:gravity="center"
            android:text="2025"
            android:fontFamily="@font/orbitron_bold"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/driver_position"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:text="1"
            android:gravity="center"
            android:fontFamily="@font/orbitron_bold"
            android:layout_weight="1">

        </TextView>

        <TextView
            android:id="@+id/team_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:text="Mclaren"
            android:fontFamily="@font/orbitron_bold"
            android:gravity="center"
            android:layout_weight="0.75">

        </TextView>

        <TextView
            android:id="@+id/driver_points"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="400"
            android:layout_marginStart="5dp"
            android:fontFamily="@font/orbitron_bold"
            android:gravity="center"
            android:layout_weight="1">

        </TextView>

        <TextView
            android:id="@+id/driver_wins"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="15"
            android:layout_marginStart="5dp"
            android:fontFamily="@font/orbitron_bold"
            android:gravity="center"
            android:layout_weight="1.05">

        </TextView>

        <TextView
            android:id="@+id/driver_podiums"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:layout_marginStart="5dp"
            android:text="20"
            android:fontFamily="@font/orbitron_bold"
            android:gravity="center"
            android:layout_weight="1">

        </TextView>


    </LinearLayout>


</com.google.android.material.card.MaterialCardView>