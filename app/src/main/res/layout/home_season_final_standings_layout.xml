<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/home_season_final_standings"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/screen_background_color">

    <LinearLayout
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:background="@drawable/bottom_right_left_stroke">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"
            android:fontFamily="@font/orbitron_bold"
            android:text="@string/season_final_results"
            android:textColor="@color/white"
            android:textSize="20sp">

        </TextView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/background_right_margin">

            <TextView
                android:id="@+id/drivers_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerInParent="true"
                android:fontFamily="@font/orbitron_bold"
                android:text="@string/drivers_upper_case"
                android:textColor="@color/white">

            </TextView>

            <LinearLayout
                android:id="@+id/race_podium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/drivers_title"
                android:layout_centerInParent="true"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="10dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/orbitron_regular"
                        android:gravity="center"
                        android:text="@string/_1_numeric"
                        android:textColor="@color/white"
                        android:textSize="12sp">

                    </TextView>

                    <View
                        android:id="@+id/first_driver_color"
                        android:layout_width="5dp"
                        android:layout_height="match_parent"
                        android:layout_marginStart="5dp"
                        android:background="@color/ferrari_f1">

                    </View>

                    <TextView
                        android:id="@+id/first_driver"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:fontFamily="@font/orbitron_regular"
                        android:text="@string/not_found"
                        android:textColor="@color/white"
                        android:textSize="12sp">

                    </TextView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="10dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/orbitron_regular"
                        android:gravity="center"
                        android:text="@string/_2_numeric"
                        android:textColor="@color/white"
                        android:textSize="12sp">

                    </TextView>

                    <View
                        android:id="@+id/second_driver_color"
                        android:layout_width="5dp"
                        android:layout_height="match_parent"
                        android:layout_marginStart="5dp"
                        android:background="@color/mclaren_f1">

                    </View>

                    <TextView
                        android:id="@+id/second_driver"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:fontFamily="@font/orbitron_regular"
                        android:text="@string/not_found"
                        android:textColor="@color/white"
                        android:textSize="12sp">

                    </TextView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="10dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/orbitron_regular"
                        android:gravity="center"
                        android:text="@string/_3_numeric"
                        android:textColor="@color/white"
                        android:textSize="12sp">

                    </TextView>

                    <View
                        android:id="@+id/third_driver_color"
                        android:layout_width="5dp"
                        android:layout_height="match_parent"
                        android:layout_marginStart="5dp"
                        android:background="@color/mercedes_f1">

                    </View>

                    <TextView
                        android:id="@+id/third_driver"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:fontFamily="@font/orbitron_regular"
                        android:text="@string/not_found"
                        android:textColor="@color/white"
                        android:textSize="12sp">

                    </TextView>

                </LinearLayout>
            </LinearLayout>


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/background_left_margin">

            <TextView
                android:id="@+id/constructors_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerInParent="true"
                android:fontFamily="@font/orbitron_bold"
                android:text="@string/constructors_upper_case"
                android:textColor="@color/white">

            </TextView>

            <LinearLayout
                android:id="@+id/constructors_podium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/constructors_title"
                android:layout_centerInParent="true"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="10dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/orbitron_regular"
                        android:gravity="center"
                        android:text="@string/_1_numeric"
                        android:textColor="@color/white"
                        android:textSize="12sp">

                    </TextView>

                    <View
                        android:id="@+id/first_team_color"
                        android:layout_width="5dp"
                        android:layout_height="match_parent"
                        android:layout_marginStart="5dp"
                        android:background="@color/ferrari_f1">

                    </View>

                    <TextView
                        android:id="@+id/first_team"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:fontFamily="@font/orbitron_regular"
                        android:text="@string/not_found"
                        android:textColor="@color/white"
                        android:textSize="12sp">

                    </TextView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="10dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/orbitron_regular"
                        android:gravity="center"
                        android:text="@string/_2_numeric"
                        android:textColor="@color/white"
                        android:textSize="12sp">

                    </TextView>

                    <View
                        android:id="@+id/second_team_color"
                        android:layout_width="5dp"
                        android:layout_height="match_parent"
                        android:layout_marginStart="5dp"
                        android:background="@color/mclaren_f1">

                    </View>

                    <TextView
                        android:id="@+id/second_team"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:fontFamily="@font/orbitron_regular"
                        android:text="@string/not_found"
                        android:textColor="@color/white"
                        android:textSize="12sp">

                    </TextView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="10dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/orbitron_regular"
                        android:gravity="center"
                        android:text="@string/_3_numeric"
                        android:textColor="@color/white"
                        android:textSize="12sp">

                    </TextView>

                    <View
                        android:id="@+id/third_team_color"
                        android:layout_width="5dp"
                        android:layout_height="match_parent"
                        android:layout_marginStart="5dp"
                        android:background="@color/mercedes_f1">

                    </View>

                    <TextView
                        android:id="@+id/third_team"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:fontFamily="@font/orbitron_regular"
                        android:text="@string/not_found"
                        android:textColor="@color/white"
                        android:textSize="12sp">

                    </TextView>

                </LinearLayout>
            </LinearLayout>


        </RelativeLayout>

    </LinearLayout>


</RelativeLayout>